	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-dependencies-compile</id>
						<phase>clean</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/dependency/compile</outputDirectory>
							<includeScope>compile</includeScope>
						</configuration>
					</execution>
					<execution>
						<id>copy-dependencies-test</id>
						<phase>clean</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/dependency/test</outputDirectory>
							<includeScope>test</includeScope>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>expand-cas-war</id>
						<phase>clean</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<unwar
									src="${project.build.directory}/dependency/test/cas-server-webapp-3.3.1.war"
									dest="${project.build.directory}/webapps/cas" />
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>copy-wat-classes</id>
						<phase>process-classes</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<macrodef name="deploy-wat-classes">
									<attribute name="webapp-root" />
									<sequential>
										<copy todir="@{webapp-root}/WEB-INF/classes">
											<fileset dir="${project.build.directory}/classes" />
										</copy>
										<copy todir="@{webapp-root}/WEB-INF/lib">
											<fileset dir="${project.build.directory}/dependency/compile">
												<exclude name="jsp-api.jar" />
												<exclude name="servlet-api.jar" />
											</fileset>
										</copy>
										<copy todir="@{webapp-root}/WEB-INF" file="tld/webassembletool.tld" />
									</sequential>
								</macrodef>
								<copy todir="${project.build.directory}/webapps">
									<fileset dir="test/webapps" />
								</copy>
								<deploy-wat-classes webapp-root="${project.build.directory}/webapps/master" />
								<deploy-wat-classes
									webapp-root="${project.build.directory}/webapps/provider" />
								<deploy-wat-classes
									webapp-root="${project.build.directory}/webapps/aggregator" />
								<deploy-wat-classes
									webapp-root="${project.build.directory}/webapps/casified_agregator" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<extensions>
		</extensions>
	</build>
