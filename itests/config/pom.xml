<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		 <groupId>org.everit.token</groupId>
        <artifactId>itests</artifactId>
		<version>0.1.0-SNAPSHOT</version>
	</parent>

	<groupId>org.everit.token.itests</groupId>
	<artifactId>org.everit.token.itests.config</artifactId>

	<packaging>bundle</packaging>
	<name>Everit token itest Config</name>
	<description>Everit token</description>

	<build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Import-Package>
                            org.everit.token.entity.*,
							!org.osgi.service.blueprint,
							javax.transaction.*;version="[1.1,2)",
							*
                        </Import-Package>
                        <Export-Package />
                        <Meta-Persistence>META-INF/token-persistence.xml</Meta-Persistence> 
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

	<dependencies>
    
        <dependency>
            <groupId>org.everit.osgi.bundles</groupId>
            <artifactId>org.everit.osgi.bundles.javax.persistence</artifactId>
            <version>2.0.0</version>
        </dependency>
        
		<dependency>
            <groupId>org.everit.token</groupId>
            <artifactId>org.everit.token.entity</artifactId>
            <version>${project.version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>com.springsource.javax.transaction</artifactId>
                    <groupId>javax.transaction</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>4.2.0</version>
            <scope>provided</scope>
        </dependency>
        
        <dependency>
            <groupId>org.everit.osgi.jdbc</groupId>
            <artifactId>org.everit.osgi.jdbc.h2</artifactId>
            <version>1.0.0</version>
        </dependency>
        
	</dependencies>
</project>
