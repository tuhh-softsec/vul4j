<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="webassembletool" default="build" basedir=".">
	<loadproperties srcfile="build.properties" />
	<target name="build">
		<copy todir="bin/master/WEB-INF/classes">
			<fileset dir="classes" />
		</copy>
		<copy todir="bin/master/WEB-INF/lib">
			<fileset dir="lib">
				<exclude name="jsp-api.jar" />
				<exclude name="servlet-api.jar" />
			</fileset>
		</copy>
		<copy todir="bin/master/WEB-INF" file="tld/webassembletool.tld" />
		<copy todir="bin/provider/WEB-INF/classes">
			<fileset dir="classes" />
		</copy>
		<copy todir="bin/provider/WEB-INF/lib">
			<fileset dir="lib">
				<exclude name="jsp-api.jar" />
				<exclude name="servlet-api.jar" />
			</fileset>
		</copy>
		<copy todir="bin/provider/WEB-INF" file="tld/webassembletool.tld" />
		<copy todir="bin">
			<fileset dir="test/webapps" />
		</copy>
	</target>
	<target name="javadoc">
		<delete>
			<fileset file="bin/javadoc" />
		</delete>
		<javadoc destdir="bin/doc/javadoc" sourcepath="src" charset="ISO-8859-1" windowtitle="Website assembling toolkit" Doctitle="Website assembling toolkit">
			<classpath>
				<fileset dir="lib">
					<include name="*.jar" />
				</fileset>
			</classpath>
			<bottom>&lt;a href="http://sourceforge.net"&gt;&lt;img src="http://sflogo.sourceforge.net/sflogo.php?group_id=209844&amp;amp;type=2" width="125" height="37" border="0" alt="SourceForge.net" /&gt;&lt;/a&gt;</bottom>
		</javadoc>
	</target>
	<target name="release" depends="build,doc,javadoc">
		<delete>
			<fileset file="bin/webassembletool*.jar" />
		</delete>
		<jar destfile="bin/webassembletool_${current.version}.jar" basedir="classes" includes="net/">
			<metainf file="tld/webassembletool.tld" />
		</jar>
		<zip destfile="bin/webassembletool_${current.version}.zip">
			<fileset dir="." includes="lib/, bin/webassembletool_${current.version}.jar, test/, src/" excludes="lib/servlet-api.jar,lib/jsp-api.jar" />
			<fileset dir="bin" includes="doc/" />
		</zip>
	</target>
	<target name="doc">
		<delete quiet="true">
			<fileset dir="bin/doc" />
		</delete>
		<xslt style="doc/stylesheet.xsl" destdir="bin" includes="doc/*.xml" excludes="doc/menu.xml,doc/sitemap.xml">
		</xslt>
		<copy todir="bin/doc">
			<fileset dir="doc" excludes="*.xml,*.xsl,schemas.ppt" />
			<fileset file="doc/sitemap.xml" />
		</copy>
	</target>
</project>
